@model SakalliTicaret.Core.Model.Entity.BasketCargo
@{
    ViewBag.Title = "StatusEdit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="card">
        @using (Html.BeginForm("BaketCargoEdit", "BasketAndOrders", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @ViewBag.hata
            <div class="form-horizontal">
                <h4>Sipariş Kargo İşlemleri</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CargoCompanyId, htmlAttributes: new { @class = "control-label " })
                            @Html.DropDownList("CargoCompanyId", new SelectList(ViewBag.CargoCompany, "Id", "Name"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CargoCompanyId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.TrackingNumber, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.TrackingNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TrackingNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.DeliveryTime, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DeliveryTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DeliveryTime, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.CreateDateTime)
                @Html.HiddenFor(model => model.CreateUserId)
                <input type="hidden" name="BasketId" id="BasketId" value="@ViewBag.BasketId" />
                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        @if (Model == null)
                        {
                            <input type="submit" value="Oluştur" class="btn btn-default" />
                        }
                        else
                        {
                            <input type="submit" value="Düzenle" class="btn btn-default" />
                        }
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Sipariş Listesi", "Index")
        </div>
    </div>
</div>