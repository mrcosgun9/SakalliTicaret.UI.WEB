@using System.Text.RegularExpressions
@model SakalliTicaret.Core.Model.Entity.Category

@{
    ViewBag.Title = "Kategori Detay";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    <div class="card">
        <p>
            <a href="/Panel/Categories/Index" class="btn btn-primary btn-sm m-b-10 m-l-5"><i class="fa fa-arrow-left"></i> Listeye Dön</a>
            <a href="/Panel/Categories/Create" class="btn btn-success btn-sm m-b-10 m-l-5"><i class="fa fa-plus"></i> Kategori Ekle</a>
        </p>
        <h2>Kategori Detay</h2>
        <hr />
        <div class="row">
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.Name)</b>:
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.ParentCategoryId)</b>:
                @Html.DisplayFor(model => model.ParentCategory.Name)
            </div>
            <div class="col-lg-1">
                <b>@Html.DisplayNameFor(model => model.IsActive)</b>:
                @Html.DisplayFor(model => model.IsActive)
            </div>
            <div class="col-lg-3">
                <b>@Html.DisplayNameFor(model => model.CreateDateTime)</b>:
                @Html.DisplayFor(model => model.CreateDateTime)
            </div>
            <div class="col-lg-3">
                <b>@Html.DisplayNameFor(model => model.CreateUser.Name) @Html.DisplayNameFor(model => model.CreateUser.LastName)</b>:
                @Html.DisplayFor(model => model.CreateUser.Name) @Html.DisplayFor(model => model.CreateUser.LastName)
            </div>
            <div class="col-lg-1">
                <b>Top Ürün</b>:
                @Model.Products.Count
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-lg-12">
                <table class="table">
                    <tr>
                        <th>
                            Resim
                        </th>

                        <th>
                            Başlık
                        </th>
                        <th>
                            Marka
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Fiyat
                        </th>

                        <th>
                            İndirim
                        </th>
                        <th>
                            Stok
                        </th>
                        <th>
                            Aktif
                        </th>


                        <th></th>
                    </tr>

                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" width="100" />

                            </td>
                            <td style="max-width: 230px;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Model)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>

                            <td>
                                <a target="_blank" href="~/Urun/@item.Id/@Regex.Replace(item.Name, @"(\s+|@|&|'|\(|\)|<|>|#)", "").Replace("*", "").ToLower()" title="Ürünü Göster"><i class="fa fa-arrow-right"></i></a> |
                                <a href="/Panel/Products/MultipleImageUpload/@item.Id" title="Toplu Resim Girişi"><i class="fa fa-file-image-o"></i></a> |
                                <a href="/Panel/Products/Edit/@item.Id" title="Düzenle"><i class="fa fa-refresh"></i></a> |
                                <a href="/Panel/Products/Details/@item.Id" title="Detay"><i class="fa fa-eye"></i></a> |
                                <a href="/Panel/Products/Delete/@item.Id" title="Sil"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
