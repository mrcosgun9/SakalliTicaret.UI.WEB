@model SakalliTicaret.Core.Model.Entity.Slider

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    <div class="card">
        @using (Html.BeginForm("Edit", "Sliders", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @ViewBag.hata
            <div class="form-horizontal">
                <h4>Slider Düzenle</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <img src="@Model.ImageUrl"/><br/>
                            @Html.LabelFor(model => model.ImageUrl, htmlAttributes: new {@class = "control-label"})<br/>
                            <input type="file" name="sliderImg" accept="image/*"/>
                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control"  })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.ButtonText, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.ButtonText, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ButtonText, "", new { @class = "text-danger" })
                    </div>
             
                </div>
                @Html.HiddenFor(model => model.CreateDateTime)
                @Html.HiddenFor(model => model.ImageUrl)



                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Düzenle" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Slider Listesi", "Index")
        </div>
    </div>
</div>