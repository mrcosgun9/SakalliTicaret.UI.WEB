@using System.Text.RegularExpressions
@model IEnumerable<SakalliTicaret.Core.Model.Entity.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    <div class="card">
        <p>
            <a href="/Panel/Sliders/Create" class="btn btn-success btn-sm m-b-10 m-l-5">Slider Ekle</a>
        </p>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsRedirect)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" width="100" />

                        </td>
                        <td style="max-width: 120px;">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td style="max-width: 230px;">
                            @Html.DisplayFor(modelItem => item.IsRedirect)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            <a href="/Panel/Sliders/Edit/@item.Id" title="Düzenle"><i class="fa fa-refresh"></i></a> |
                            <a href="/Panel/Sliders/Details/@item.Id" title="Detay"><i class="fa fa-eye"></i></a> |
                            <a href="/Panel/Sliders/Delete/@item.Id" title="Sil"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

