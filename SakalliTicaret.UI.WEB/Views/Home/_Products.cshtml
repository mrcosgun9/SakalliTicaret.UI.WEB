@using PagedList.Mvc
@model SakalliTicaret.UI.WEB.Models.FilterModel
<div class="col-md-9">
    <div class="xt-feature-product">
        <div class="section-separator">
            <div class="xt-filter-nav padding-bottom-60">
                @*<div class="col-md-2 col-sm-2 col-xs-6">
                    <div class="xt-view">
                        <a href="" class="active"><i class="fa fa-th-large"></i></a>
                        <a href=""><i class="fa fa-navicon"></i></a>
                    </div>
                </div>*@
                <div class="col-md-2 col-sm-2 col-xs-6 xt-show-item">
                    <label>Adet: </label>
                    <div class="xt-select xt-search-opt xt-item-view-count">
                        <select class="xt-category-search select-beast">
                            <option>30</option>
                            <option>60</option>
                            <option>90</option>
                            <option>120</option>
                            <option>150</option>
                        </select>
                    </div>
                </div>
                <div class="form-group xt-shop-category col-md-4 col-sm-4 col-xs-12">
                    <div class="xt-select xt-search-opt">
                        @Html.DropDownList("PageRanking", (IEnumerable<SelectListItem>)ViewBag.PageRanking, new { @onchange = "getProduct()", @id = "drSiralama",@class="xt-category-search select-beast" })
                        @*<select class="xt-category-search select-beast">
                            <option>Artan Fiyat</option>
                            <option>Azalan Fiyat</option>
                            <option>Eklenme Tarihi</option>
                        </select>*@
                    </div>

                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="xt-page-pagination">
                        <nav aria-label="Page navigation">
                            @Html.PagedListPager(Model.Products,page => Url.Action("Index", new RouteValueDictionary
                            {
                                {"Page",page},
                                {"PageRanking",Model.PageRanking},
                                {"Category",Model.Category},
                                {"PageCount",Model.PageCount}
                            }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "urunDiv" }))
                        </nav>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="xt-each-feature">

                @foreach (var item in Model.Products)
                {
                    <div class="col-md-3 productStyle">
                        <div class="card">
                            <a href="~/Urun/@item.ID/@item.Name.Replace(" ", "").ToLower()">
                                <div class="cardimagediv">
                                    <img class="card-img-top" src="@item.ImageUrl" />
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>


                                </div>
                            </a>
                            <small stle="float:left;">@item.Price TL</small>
                            <button name="@item.ID" class="basketCreate" type="submit"><i class="fa fa-cart-plus"></i>Sepete Ekle</button>

                            @*<a href="#" class="btn btn-primary btn-block"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>*@
                        </div>

                    </div>
                }
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 xt-bottom-hr">
                <hr class="xt-hr">
            </div>
            <div class="xt-filter-nav padding-bottom-60">
                <div class="col-md-2 col-sm-2 col-xs-6">
                    <div class="xt-view">
                        <a href="" class="active"><i class="fa fa-th-large"></i></a>
                        <a href=""><i class="fa fa-navicon"></i></a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-6 xt-show-item">
                    <label>Adet: </label>
                    <div class="xt-select xt-search-opt xt-item-view-count">
                        <select class="xt-category-search select-beast">
                            <option>30</option>
                            <option>60</option>
                            <option>90</option>
                            <option>120</option>
                            <option>150</option>
                        </select>
                    </div>
                </div>
                <div class="form-group xt-shop-category col-md-4 col-sm-4 col-xs-12">
                    <div class="xt-select xt-search-opt">
                        <select class="xt-category-search select-beast">
                            <option>Artan Fiyat</option>
                            <option>Azalan Fiyat</option>
                            <option>Eklenme Tarihi</option>
                        </select>
                    </div>

                </div>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="xt-page-pagination">
                        <nav aria-label="Page navigation">
                            @*<ul class="pagination xt-pagination">
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#" aria-label="Next"><i class="fa fa-caret-right"></i></a></li>
                            </ul>*@
                            @Html.PagedListPager(Model.Products,page => Url.Action("Index", new RouteValueDictionary
                            {
                                {"Page",page},
                                {"PageRanking",Model.PageRanking},
                                {"Category",Model.Category},
                                {"PageCount",Model.PageCount}
                            }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "urunDiv" }))
                            
                        </nav>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="row" style="width: 100%;">
    <div class="col-12">
     
    </div>
</div>
