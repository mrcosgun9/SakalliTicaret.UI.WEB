
@model IEnumerable<SakalliTicaret.Core.Model.Entity.Category>


@foreach (var item in Model.Where(u => u.ParentId == 0 || u.ParentId == null))
{
    <li id="@item.Id">
        <a href="/Anasayfa/Kategori/@item.Id/@item.Name.ToLower().Trim()">
            <i class="fa fa-circle"></i>
            <strong>
                @item.Name

            </strong>
        </a>
        @{
            var subModel = Model.Where(u => u.ParentId == item.Id).ToList();
        }
        @if (subModel.Count != 0)
        {
            <ul class="xt-dropdown">
                @foreach (var subItem in Model.Where(u => u.ParentId == item.Id))
                {
                    <li>

                        <a href="/Anasayfa/@subItem.Id/@subItem.Name.ToLower().Trim()"><i class="fa fa-angle-right"></i>@subItem.Name</a>
                    </li>
                }
            </ul>
        }

    </li>


            }

