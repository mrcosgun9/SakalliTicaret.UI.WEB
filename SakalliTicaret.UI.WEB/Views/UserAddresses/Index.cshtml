@model IEnumerable<SakalliTicaret.Core.Model.Entity.UserAddress>


@if (Session["LoginUser"] != null)
{
    <div class="baslikborder">Adres Listesi</div>
    if (!Model.Any() || Model == null)
    {
        <div>
            <b>
                Adres Kaydı Bulunamadı Adres Ekleyin
            </b>
        </div>
    }
    else
    {
        <ul class="adreslist">
            @foreach (var item in Model)
            {
                <li></li>
            }
        </ul>
    }
    <a class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Adres Ekle</a>
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body">
                @{Html.RenderAction("Create", "UserAddresses");}
            </div>

        </div>
    </div>
</div>
